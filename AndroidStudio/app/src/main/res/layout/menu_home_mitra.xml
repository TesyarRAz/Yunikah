<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="8dp"
    android:background="#F7F3F3"
    android:layout_height="280dp">

    <TextView
        android:id="@+id/txt_mitra"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/vpi__background_holo_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="MarLina Salon"/>

    <ImageView
        android:layout_weight="1"
        android:id="@+id/img_mitra"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_deskripsi"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Salon pilihan terbaik yang ada di sukabumi sudah menjadi salon langgalnan pada masanya  "/>


</LinearLayout>